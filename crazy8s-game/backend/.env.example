# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=debug

# Database Configuration
# Choose database type: 'mongodb', 'postgresql', or 'none' (memory-only)
DB_TYPE=postgresql

# MongoDB Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/crazy8s
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_CONNECT_TIMEOUT=10000
MONGODB_MAX_IDLE_TIME=30000

# PostgreSQL Configuration (if using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crazy8s
DB_USER=postgres
DB_PASSWORD=password
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=10000
DB_EVICT_TIMEOUT=1000
DB_CONNECT_TIMEOUT=20000
DB_IDLE_IN_TRANSACTION_TIMEOUT=30000
DB_QUERY_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Game Configuration
GAME_TIMER_DEFAULT=60
GAME_MAX_PLAYERS=8
GAME_MIN_PLAYERS=2
TOURNAMENT_MAX_PARTICIPANTS=64

# Email Configuration (for user verification)
EMAIL_FROM=noreply@crazy8s.com
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Redis Configuration (optional, for session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_DEST=uploads/

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_MAX_AGE=86400000

# Development Configuration
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_MORGAN_LOGGING=true

# Production Configuration
HELMET_ENABLED=true
COMPRESSION_ENABLED=true
TRUST_PROXY=false

# =============================================================================
# ENHANCED AUTHENTICATION FEATURES (Based on Architect's Schema)
# =============================================================================

# Email Verification
ENABLE_EMAIL_VERIFICATION=false
EMAIL_VERIFICATION_EXPIRE=24h

# Password Reset
ENABLE_PASSWORD_RESET=false
PASSWORD_RESET_EXPIRE=1h

# Two-Factor Authentication (Future Feature)
ENABLE_TWO_FACTOR_AUTH=false

# Account Security
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=2h
TRACK_LOGIN_IPS=true

# =============================================================================
# ENHANCED GAME FEATURES
# =============================================================================

# Tutorial System
ENABLE_TUTORIAL_SYSTEM=true
TUTORIAL_AUTO_PROGRESS=true

# Achievement System (Future Feature)
ENABLE_ACHIEVEMENTS=false

# Social Features
ENABLE_FRIEND_SYSTEM=false
ENABLE_USER_BLOCKING=false
ENABLE_CHAT_MODERATION=false

# Tournament Features
ENABLE_TOURNAMENTS=true
TOURNAMENT_DEFAULT_SIZE=16
TOURNAMENT_REGISTRATION_BUFFER=15m

# Statistics Tracking
ENABLE_DETAILED_STATISTICS=true
ENABLE_GAME_TYPE_STATISTICS=true
TRACK_CARD_PREFERENCES=true

# =============================================================================
# LOCALSTORAGE MIGRATION SETTINGS
# =============================================================================

# Enable migration from localStorage to database
ENABLE_LOCALSTORAGE_MIGRATION=true
MIGRATION_BATCH_SIZE=100
MIGRATION_TIMEOUT_MS=30000
MIGRATION_CLEANUP_AFTER=true

# =============================================================================
# ADVANCED GAME SETTINGS
# =============================================================================

# Timer Settings
TIMER_MIN_DURATION=15
TIMER_MAX_DURATION=300
TIMER_WARNING_MIN=5
TIMER_WARNING_MAX=60

# Accessibility Features
ENABLE_HIGH_CONTRAST=true
ENABLE_REDUCED_MOTION=true
FONT_SIZE_MIN=0.5
FONT_SIZE_MAX=2.0

# Card Sorting
ENABLE_CUSTOM_SORTING=true
CARD_SORTING_PERSISTENCE=true

# =============================================================================
# MONITORING AND AUDIT
# =============================================================================

# User Activity Logging
ENABLE_USER_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# Migration Tracking
ENABLE_MIGRATION_LOG=true
MIGRATION_LOG_RETENTION_DAYS=30

# Performance Monitoring
ENABLE_QUERY_LOGGING=false
SLOW_QUERY_THRESHOLD_MS=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# UI Features
ENABLE_DARK_MODE=true
ENABLE_THEME_CUSTOMIZATION=true
ENABLE_LANGUAGE_SELECTION=true

# Game Modes
ENABLE_QUICK_PLAY=true
ENABLE_CUSTOM_RULES=false
ENABLE_SPECTATOR_MODE=false

# Social and Communication
ENABLE_PROFILE_CUSTOMIZATION=true
ENABLE_BIO_FIELD=true
ENABLE_AVATAR_UPLOAD=false

# Privacy Features
ENABLE_PRIVACY_CONTROLS=true
DEFAULT_PROFILE_VISIBILITY=public

# =============================================================================
# DATABASE MIGRATION SETTINGS
# =============================================================================

# Auto-run migrations on startup
AUTO_MIGRATE_ON_START=false

# Force database sync (development only - DANGEROUS in production)
FORCE_DB_SYNC=false

# Create default data on migration
CREATE_DEFAULT_TUTORIAL_DATA=true
CREATE_DEFAULT_ACHIEVEMENTS=false

# =============================================================================
# NOTIFICATION SETTINGS (Future Feature)
# =============================================================================

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=false
EMAIL_NOTIFICATION_TYPES=game_invites,friend_requests,tournaments

# In-App Notifications
ENABLE_IN_APP_NOTIFICATIONS=true
NOTIFICATION_RETENTION_DAYS=7